<!DOCTYPE html>
<html>
  <head>
    <title>MilesOfSmiles</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="my-nav">
      <div class="container">
        <ul>
          <li><%= link_to "Home", root_path %></li>
        <% if current_user %>
          <li class="li-right"><%= link_to "Sign out", '/signout' %></li>
          <li class="li-right"><%= link_to current_user.user_name, user_path(current_user) %></li>
        <% else %>
          <li class="li-right"><%= link_to "Sign up", 'signup' %></li>
          <li class="li-right"><%= link_to "Sign in", '/signin' %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="content-wrapper">
      <div class="container">
        <p><%= flash[:alert] %></p>
        <p><%= flash[:notice] %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
