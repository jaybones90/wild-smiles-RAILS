<h1 class="text-style"> Add A Review To <%= @service.name %> </h1>


<div class="text-style">
  <%= render 'layouts/errors', :object => @review %>

  <%= form_for [@service, @review] do |f| %>
  <%= f.label :author, "Author" %>
  <%= f.text_field :author %>
  <%= f.label :content, "Review" %>
  <%= f.text_area :content, rows: 6, cols: 40 %>
  <%= f.submit %>
  <% end %>
</div>
